echo "Running pre-commit checks..."

# 1. 运行 lint-staged（ESLint + Prettier）
echo "\nStep 1/2: Linting and formatting staged files..."
pnpm exec lint-staged || exit 1

# 2. 运行类型检查（TypeScript）
echo "\nStep 2/2: Running TypeScript type check..."
pnpm run type-check || exit 1

echo "\nAll pre-commit checks passed!"
